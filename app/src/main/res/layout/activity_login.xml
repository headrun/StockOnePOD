<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pages.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/img_login"/>

    <RelativeLayout
        android:id="@+id/phone_rl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NUMBER VERIFICATION"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textColor="@color/login_text"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India(+91)"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/edt_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter phone number"
                android:maxLength="10"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textColorHint="@color/grey"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Please enter your phone number. We will send you an OTP for verification."/>


            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                style="@style/AVLoadingIndicatorView"
                android:visibility="visible"
                app:indicatorName="LineScalePartyIndicator"
                app:indicatorColor="@color/login_text" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/login_text"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/black"
            style="@style/Base.Widget.AppCompat.Button.Borderless">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/otp_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE NUMBER VERIFICATION"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textColor="@color/login_text"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/edt_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter OTP"
                android:layout_marginTop="80dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textColorHint="@color/grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:id="@+id/txt_resend_otp"
                android:textColor="@color/login_text"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="We have sent you a one time message. Please enter it here."/>

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                style="@style/AVLoadingIndicatorView"
                android:visibility="visible"
                app:indicatorName="LineScalePartyIndicator"
                app:indicatorColor="@color/login_text" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/login_text"
            android:text="Sign In"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            style="@style/Base.Widget.AppCompat.Button.Borderless">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>